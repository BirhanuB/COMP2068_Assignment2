extends layout

block content
  h6 Edit item
  hr
  form(method='POST' action='/edit')
    div
        p Title: 
            input(type='text' name='title' value=item.title size='50px')
    div
        p Description: 
            input(type='text' name='description' value=item.description size='100px')    
    div
        p Price: 
            input(type='text' name='price' value=item.price size='50px')
    div
        input(type='hidden' name='id' value=item.id)
        button(type='submit' value='Submit') Submit